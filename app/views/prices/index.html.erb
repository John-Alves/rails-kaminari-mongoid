<h1>Prices</h1>

<table>
  <thead>
    <tr>
      <th>Discount value</th>
      <th>Value</th>
      <th>Benefit tier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.discount_value %></td>
        <td><%= price.value %></td>
        <td><%= price.benefit_tier %></td>
        <td><%= link_to 'Edit', edit_product_ticket_price_path(@product, @ticket, price) %></td>
<!--        <td><%#= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', product_tickets_path(@product) %>
